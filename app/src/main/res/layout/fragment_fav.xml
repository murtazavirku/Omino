<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".FavFragment"
    android:orientation="vertical"
    android:background="@color/ashen_black">

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/sql_tabLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/ashen_black"
        app:tabTextColor="@color/white"
        app:tabIndicatorColor="@color/white"
        app:tabIconTint="@color/white">

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:icon="@drawable/ic_explore"/>

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:icon="@drawable/ic_saved"/>
    </com.google.android.material.tabs.TabLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey_20"></View>

    <LinearLayout
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_width="match_parent">

        <FrameLayout
            android:id="@+id/frame_for_fav"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            ></FrameLayout>

    </LinearLayout>


</LinearLayout>