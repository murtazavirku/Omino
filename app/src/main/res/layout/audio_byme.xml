<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:gravity="end" android:orientation="horizontal" android:id="@+id/lyt_parent" android:paddingLeft="@dimen/spacing_middle" android:paddingTop="1dp" android:paddingRight="@dimen/spacing_middle" android:paddingBottom="1dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="5dp" android:layout_marginStart="5dp">
    <androidx.cardview.widget.CardView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_margin="3dp" android:minHeight="32dp" app:cardBackgroundColor="#e1ffc7" app:cardCornerRadius="5dp" app:cardElevation="1dp" app:cardUseCompatPadding="false">
        <LinearLayout android:orientation="vertical" android:paddingLeft="@dimen/spacing_medium" android:paddingTop="@dimen/spacing_medium" android:paddingRight="@dimen/spacing_medium" android:paddingBottom="@dimen/spacing_medium" android:layout_width="match_parent" android:layout_height="match_parent" android:minWidth="180dp">
            <LinearLayout
                android:id="@+id/MusicPlayerLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <RelativeLayout  android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_margin="@dimen/spacing_large">
                    <com.google.android.material.floatingactionbutton.FloatingActionButton android:id="@+id/bt_play" android:clickable="true" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_margin="@dimen/spacing_medium" android:tint="@android:color/white" app:backgroundTint="#2980b9" app:elevation="0dp" app:fabSize="normal" app:rippleColor="@android:color/white" app:srcCompat="@drawable/play_arrow"/>
                    <ProgressBar android:id="@+id/song_progressbar" android:background="@drawable/circle_shape_music" android:layout_width="65dp" android:layout_height="65dp" android:max="1000" android:progress="0" android:indeterminate="false" android:progressDrawable="@drawable/circular_progress_bar_music" android:minWidth="75dp" android:minHeight="75dp" android:layout_centerInParent="true" style="@style/Widget.AppCompat.ProgressBar.Horizontal"/>
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout android:layout_gravity="end" android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content">
                <TextView android:textSize="12sp" android:textColor="@color/grey_40" android:gravity="center" android:id="@+id/text_time" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="02:30 AM"/>
                <View android:layout_width="@dimen/spacing_medium" android:layout_height="0dp"/>
<!--                <ImageView android:layout_width="@dimen/spacing_large" android:layout_height="@dimen/spacing_large" app:tint="#42bdee" app:srcCompat="@drawable/ic_done_all"/>-->
            </LinearLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>