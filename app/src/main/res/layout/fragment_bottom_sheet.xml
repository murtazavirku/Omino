<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BottomSheets.BottomSheetFragment"
    android:orientation="vertical"
    android:background="@color/ashen_black">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/cancleBS"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="10dp"
            android:src="@drawable/ic_outline_close_24"
            android:backgroundTint="@color/ashen_black"
            android:layout_alignParentLeft="true"
            android:padding="0dp"
            android:scaleType="fitXY"
            ></ImageButton>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_centerInParent="true"
            android:text="Select Collection"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/white"></TextView>

        <ImageButton
            android:id="@+id/doneBS"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="10dp"
            android:src="@drawable/ic_baseline_done_24"
            android:backgroundTint="@color/ashen_black"
            android:layout_alignParentRight="true"
            android:padding="0dp"
            android:scaleType="fitXY"
            ></ImageButton>


    </RelativeLayout>

    <View android:background="@color/grey_80" android:layout_width="match_parent" android:layout_height="1px"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/SavedRecyclerView"
        android:padding="10dp"
        android:scrollbars="vertical"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:scrollingCache="true"
        android:background="@color/ashen_black"/>


</LinearLayout>